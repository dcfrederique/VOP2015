@model Carcassonne_Web.Models.Abuse
@{
    Layout = null;
}

<div class="modal fade" id="abuseModal" tabindex="-1" role="dialog" aria-labelledby="abuseModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("DidAbuse","Profile",FormMethod.Post)){
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Meld misbruik</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.User.Id)

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Reason, new { @class = "control-label" })
                    <div>
                        @Html.TextAreaFor(m => m.Reason, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Meld</button>
            </div>
            }
        </div>
    </div>
</div>